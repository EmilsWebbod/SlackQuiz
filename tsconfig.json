{
  "files": ["lib/server.ts"],
  "include": ["lib/**/*.ts"],
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "target": "es6",
    "outDir": "dist",
    "rootDir": ".",
    "lib": ["es2015"],
    "sourceMap": true,
    "baseUrl": "lib",
    "moduleResolution": "node",
    "removeComments": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "*": ["node_modules/@types/*", "./lib/types/*"]
    }
  }
}
